<UserControl x:Class="Linear_Programming_Calculator_Desktop.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Linear_Programming_Calculator_Desktop.Views"
             xmlns:m ="clr-namespace:Linear_Programming_Calculator_Desktop.Models"
             xmlns:conv="clr-namespace:Linear_Programming_Calculator_Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <UserControl.Resources>
        <ResourceDictionary>
            <conv:NullToVisibilityConverter x:Key="nullToVisibilityConverter"/>

            <DataTemplate x:Key="SimplexTableTemplate">
                    <Border BorderThickness="2"
                        BorderBrush="#FFD966"
                        CornerRadius="5">
                    <ItemsControl ItemsSource="{Binding Cells}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="{Binding TotalRows}" Columns="{Binding TotalCols}" Background="#FFFFF0"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}"
                                   Background="{Binding Background}"
                                   TextAlignment="Center"
                                   Padding="5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="MathBlock">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding FormattedObjectiveFunction}" FontFamily="Consolas" TextWrapping="Wrap" />
                    <ItemsControl ItemsSource="{Binding FormattedConstraints}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontFamily="Consolas" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Margin="0,12,0,0"
                       Text="{Binding DomainText}"
                       FontStyle="Italic"
                       Foreground="Gray"/>
                    <TextBlock Margin="0,6,0,0"
                       Text="{Binding IntegerNote}"
                       FontWeight="SemiBold"
                       Foreground="RoyalBlue"
                       Visibility="{Binding IntegerNote, Converter={StaticResource nullToVisibilityConverter}}"/>
                </StackPanel>
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/LinearProgStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer MaxHeight="600" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="Нова задача"
            Command="{Binding NewProblemCommand}"
            Grid.Column="0" Width="100"/>
                <Button Content="Змінити задачу"
            Command="{Binding EditProblemCommand}"
            Grid.Column="2" Height="25" Width="100"/>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Vertical">
                <TextBlock Text="Математична модель" FontWeight="DemiBold"/>
                <ContentControl Content="{Binding MathModelBlock}" 
                    ContentTemplate="{StaticResource MathBlock}" />

                <TextBlock Text="Вводимо вільні змінні" FontWeight="DemiBold" />
                <ContentControl Content="{Binding FreeVariableBlock}" 
                    ContentTemplate="{StaticResource MathBlock}" />

                <StackPanel Visibility="{Binding ArtificialVariableBlock, Converter={StaticResource nullToVisibilityConverter}}">
                    <TextBlock Text="Вводимо штучні змінні" FontWeight="DemiBold"/>
                    <ContentControl Content="{Binding ArtificialVariableBlock}" 
                  ContentTemplate="{StaticResource MathBlock}" />
                </StackPanel>

                <TextBlock Text="Отримуємо початковий допустимий базисний розв’язок задачі" FontWeight="DemiBold" />
                <TextBlock Text="{Binding InitialBasisText}"/>

                <ItemsControl ItemsSource="{Binding SimplexTables}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="Будуємо симплекс-таблицю" FontWeight="Bold" FontSize="16" Margin="0,0,0,5" />
                                <TextBlock Text = "{Binding Step.PivotColumn, StringFormat='Напрямний стовпець: A\{0\}'}"/>
                                
                                <StackPanel Visibility="{Binding PivotRowKey, Converter={StaticResource nullToVisibilityConverter}}">
                                    <TextBlock Text = "{Binding PivotRowKey, StringFormat='Напрямний рядок: \{0\}'}"/>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Напрямний елемент: {0}{1}">
                                                <Binding Path="PivotRowKey"/>
                                                <Binding Path="Step.PivotColumn"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                                
                                <ContentControl Content="{Binding}"
                                ContentTemplate="{StaticResource SimplexTableTemplate}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Visibility="{Binding OptimalResult.Step.Table, Converter={StaticResource nullToVisibilityConverter}}">
                    <TextBlock Text="Отримано оптимальний розв'язок задачі" FontWeight="Bold" FontSize="16"/>
                    <ContentControl Content="{Binding OptimalResult}"
                                ContentTemplate="{StaticResource SimplexTableTemplate}" />
                </StackPanel>

                <TextBlock Text="{Binding SimplexSolutionSummary}" 
                    FontWeight="SemiBold" TextAlignment="Center" Margin="10" FontSize="14"/>
                
                <StackPanel Visibility="{Binding GomoryTables, Converter={StaticResource nullToVisibilityConverter}}">
                    <TextBlock Margin="10" Text="Пошук цілочисельного розв’язку (метод Гоморі)" 
                               TextAlignment="Center" FontSize="16" FontWeight="Bold"/>
                    <ItemsControl ItemsSource="{Binding GomoryHistory}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="Формуємо правильне відсічення" FontWeight="Bold"  Margin="0,5,0,5"  FontSize="14" />
                                    <TextBlock Text="{Binding MaxFractionDisplayText}" />
                                    <ItemsControl ItemsSource="{Binding GomoryCutLines}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Margin="0,0,0,5"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <ItemsControl ItemsSource="{Binding GomoryTables}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="Будуємо симплекс-таблицю"
                                                           FontWeight="Bold"
                                                           FontSize="14"
                                                           Margin="0,0,0,5" />

                                                    <StackPanel Visibility="{Binding PivotRowKey, Converter={StaticResource nullToVisibilityConverter}}">
                                                        <TextBlock Text="{Binding PivotRowKey, StringFormat='Напрямний рядок: {0}'}" />
                                                        <TextBlock Text="{Binding Step.PivotColumn, StringFormat='Напрямний стовпець: A{0}'}" />
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="Напрямний елемент: {0}{1}">
                                                                    <Binding Path="PivotRowKey" />
                                                                    <Binding Path="Step.PivotColumn" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <ContentControl Content="{Binding}"
                                                             ContentTemplate="{StaticResource SimplexTableTemplate}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                
                <TextBlock Text="{Binding ErrorMessage}"
                    Foreground="Red"
                    FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
