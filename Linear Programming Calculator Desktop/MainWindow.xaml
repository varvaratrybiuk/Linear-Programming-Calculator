<Window x:Class="Linear_Programming_Calculator_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Linear_Programming_Calculator_Desktop"
        xmlns:vms="clr-namespace:Linear_Programming_Calculator_Desktop.ViewModels"
        xmlns:views="clr-namespace:Linear_Programming_Calculator_Desktop.Views"
        mc:Ignorable="d"
        Title="Linear Programming Solver" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:StartViewModel}">
                <views:StartView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:EquationInputViewModel}">
                <views:EquationInputView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ResultsViewModel}">
                <views:ResultsView/>
            </DataTemplate>
            
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
